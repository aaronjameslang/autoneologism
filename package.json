{
  "name": "learning-word-generator",
  "version": "1.0.0",
  "description": "A word generator that teaches itself your phonotactics",
  "author": "aaronjameslang@googlemail.com",
  "repository": "ajl7c7.com:learning-word-generator.git",
  "license": "UNLICENSED",
  "private": true,
  "main": "index.js",
  "scripts": {
    "build": "npm i &&  npm run format -s && npm run test -s && npm run lint",
    "format": "standard-format --write",
    "lint": "standard --fix",
    "regenerate": "rm test/characterisation/*/*.json && REGENERATE=true tape test/characterisation/characterise.js",
    "test": "tape test/*.js test/**/*.js | faucet",
    "test-debug": "tape test/*.js test/**/*.js",
    "test-quick": "QUICK=true npm run test -s"
  },
  "devDependencies": {
    "faucet": "0.0.1",
    "standard": "^7.1.2",
    "standard-format": "^2.2.2",
    "tape": "^4.6.0"
  },
  "dependencies": {
    "ramda": "^0.22.1"
  }
}
